package cursojava.aula17;

import java.util.Scanner;

public class Aula17Ex05 {

	public static void main(String[] args) {
		Scanner scan = new Scanner (System.in);
		
		System.out.println("Digite a quantidade dA POPULIÇÃO do PAIS A");
		int popA = scan.nextInt();
		
		System.out.println("Digite a quantidade dA POPULIÇÃO do PAIS A");		
		int popB = scan.nextInt();
		
		int crescimento = 0;
		
		while (popA < popB) {
			popA += (popA/100)*3;
			popB += (popB/100)*1.5;
			crescimento ++;
		}
		System.out.println("popA = " + popA);
		System.out.println("popB = " + popB);
		System.out.println(crescimento);
	}

}
