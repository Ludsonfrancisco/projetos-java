package cursojava.aula17;

import java.util.Scanner;

public class Aula17Ex05 {

	public static void main(String[] args) {
		Scanner scan = new Scanner (System.in);
		
		boolean valido = false;
		int popA; 
		int popB;
		int crescimento = 0;
		double taxaCresA;
		double taxaCresB;
		
		do {
			
			System.out.println("Entre com a população A: ");
			popA = scan.nextInt();	
						
			if(popA > 0 ) {
				valido =  true;
			}else {
				System.out.println("Digite um número maior que 0");
			}		
		}	while (!valido);
		
		
		valido =false;
		do {
			
			System.out.println("Digite a taxa de crescimento da População A: ");
			taxaCresA = scan.nextDouble();
			
			if (taxaCresA >= 0) {
				valido = true;
			}else {
				System.out.println("Taxa de crescimento invalida");
			}
			
		}while(!valido);
		
		valido = false;
		do {
			
			System.out.println("Digite a quantidade dA POPULIÇÃO do PAIS B");
			popA = scan.nextInt();
			
			if(popA > 0 ) {
				valido =  true;
			}else {
				System.out.println("Digite um número maior que 0");
			}
		}	while (!valido);
	}

}
